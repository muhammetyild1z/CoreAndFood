<!DOCTYPE html>
<html>
<head>

    <!-- Custom Theme files -->
    <link href="~/web2/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- Custom Theme files -->
    <script src="~/web2/js/jquery.min.js"></script>
    <link rel="stylesheet" href="~/web2/css/font-awesome.css">
    <!-- Custom Theme files -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Metro Panel Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--webfont-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <link href="~/web2/css/jqvmap.css" media="screen" rel="stylesheet" type="text/css" />


    <script src="~/web2/js/easyResponsiveTabs.js" type="text/javascript"></script>

    <script src="~/web2/js/main.js"></script> <!-- Resource jQuery -->
    <!-- chart -->
    <script src="~/web2/js/Chart1.js"></script>
    <!-- //chart -->
</head>
<body>
    <div class="total-content">
        <div class="list_of_members">
            <div class="sales" style="background-color:#1abc9c">
                <div class="icon-text">
                    <h3>@ViewBag.FoodCount</h3>
                    <p>Toplam Ürün</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="new-users" style="background-color:#2ecc71">

                <div class="icon-text">
                    <h3>@ViewBag.CatagoriesCount</h3>
                    <p>Toplam Katagori</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="orders" style="background-color:#3498db">

                <div class="icon-text">
                    <h3>@ViewBag.FruitCount</h3>
                    <p>Çeşit Meyve Bulunmakta</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="visitors" style="background-color:#9b59b6">

                <div class="icon-text">
                    <h3>@ViewBag.VegetableCount</h3>
                    <p>Çeşit Sebze Bulunmakta</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>



    <div class="clearfix"></div>

    <div class="total-content">
        <div class="list_of_members">
            <div class="new-users" style="background-color:#e67e22">

                <div class="icon-text">
                    <h3>@ViewBag.Tahil</h3>
                    
                    <p>Tahıl Sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="sales" style="background-color:#f1c40f">
                <div class="icon-text">
                    <h3>@ViewBag.TotalFood</h3>
                    <hr style="background-color:bisque; margin:3px 0px" />
                    <p>Toplam ürün Sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>

            <div class="orders" style="background-color:#e74c3c">

                <div class="icon-text">
                    <h3>@ViewBag.MaxFood</h3>
                    <hr style="background-color:bisque; margin:3px 0px" />
                    <p>En Çok Bulunan Ürün</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="visitors" style="background-color:#95a5a6">

                <div class="icon-text">
                    <h3>@ViewBag.MinFood</h3>
                    <hr style="background-color:bisque; margin:3px 0px" />
                    <p>En Az Bulunan Ürün</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="total-content">
        <div class="list_of_members">
            <div class="sales" style=" background-color: #2d98da">
                <div class="icon-text">
                    <h3>@ViewBag.FoodAVG ₺</h3>
                    <hr style="background-color:bisque; margin:3px 0px" />
                    <p style="font-size:15px">Ürünlerin Ortalama Fiyatı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="new-users" style=" background-color: #f7b731">

                <div class="icon-text">
                    <h3>@ViewBag.SumFruid</h3>
                    <hr style="background-color:bisque; margin:3px 0px" />
                    <p>Toplam Meyve sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="orders" style=" background-color: #4b6584">

                <div class="icon-text">
                    <h3>@ViewBag.SumVegetable</h3>
                    <hr style="background-color:bisque; margin:3px 0px" />
                    <p>Toplam Sebze sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="visitors" style="  background-color: rgba(15, 185, 177,1.0)">

                <div class="icon-text">
                    <h3>@ViewBag.MaxPrice</h3>
                    <hr style="background-color:bisque; margin:3px 0px" />
                    <p>En Pahalı Ürün</p>
                </div>
                <div class="clearfix"></div>
            </div>


        </div></div>
</body>
</html>

